{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": { "~/*": ["./lib/*"] }
	},
	"include": ["lib"]
}
